{
  "name": "create-arcgis-app",
  "version": "0.1.0",
  "private": true,
  "description": "An example of how to use the ArcGIS platform in an application created with crete-react-app.",
  "dependencies": {
    "@esri/arcgis-rest-auth": "^2.0.0",
    "@esri/arcgis-rest-portal": "^2.0.0",
    "@esri/arcgis-rest-request": "^2.0.0",
    "bootstrap": "^4.3.1",
    "esri-loader": "^2.9.2",
    "js-cookie": "^2.2.0",
    "react": "^16.8.6",
    "react-arcgis-hub": "^0.1.0",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "reactstrap": "^8.0.0"
  },
  "devDependencies": {
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-react-app": "^4.0.0",
    "eslint-plugin-flowtype": "^3.6.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^2.1.0",
    "jest-dom": "^3.1.4",
    "lint-staged": "^8.1.5",
    "node-sass": "^7.0.0",
    "prettier": "^1.17.0",
    "react-scripts": "3.0.0",
    "react-testing-library": "^7.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "npm run copy:auth",
    "copy:auth": "cp ./node_modules/@esri/arcgis-rest-auth/dist/umd/auth.umd.min.js ./public/auth.umd.min.js",
    "build": "react-scripts build",
    "predeploy": "npm run build && mv build/index.html build/200.html",
    "deploy": "surge ./build create-arcgis-app.surge.sh",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
